            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="Regresar"
                android:src="@drawable/ic_arrow_back_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Alumnos del Curso"
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVICOD_ALUM_CURSO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="4256 -"
                android:textColor="#ffff"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVINOM_ALUM_CURSO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Desarrollo de Aplicaciones MÃ³vilesI"
                android:textColor="#ffff"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:id="@+id/TVSECCION_ALUM_CURSO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="T4AJ"
            android:textColor="#ffff"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
        android:id="@+id/LVALUMNOS_CURSO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>