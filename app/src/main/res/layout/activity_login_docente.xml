<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context=".LoginDocenteActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        app:srcCompat="@drawable/logo" />


    <EditText
        android:id="@+id/EDTUSUARIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:drawableLeft="@drawable/ic_action_usuario"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:paddingBottom="0dp" />

    <EditText
        android:id="@+id/EDTCLAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_action_clave"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/CKB_RECORDAR_CLAVE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:text="Recordar Contraseña"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/BTNENTRAR"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="5dp"
        android:background="#044163"
        android:onClick="Login"
        android:padding="0dp"
        android:paddingBottom="10dp"
        android:paddingEnd="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="ENTRAR"
        android:textColor="@android:color/background_light" />


</LinearLayout>